<!-- subscription-button-top start -->
<div class="subscription-button-top">

        <!-- info-inner-left start -->
        <div class="info-inner-left">
                <h3>[[+product_name]]</h3>
        </div> <!-- info-inner-left end -->

        <!-- info-inner-right start -->
        <div class="info-inner-right">
                <a id="cancel-[[+subscription_id]]"href="[[+cancel_url]]" class="sub-cancel">Cancel</a> 
                <!--<a href="[[+switch_url]]" class="ch-plan">Change Plan</a>-->
                <div class="clear"></div> <!-- clear -->
        </div> <!-- info-inner-right end -->

        <div class="clear"></div> <!-- clear -->

</div> <!-- subscription-button-top end -->

<!-- subscription-details start -->
<div class="subscription-details">

        <!-- subscription-details-left start -->
        <div class="subscription-details-left">
                <h3>Payment &amp; Billing</h3>
                [[+payment]]
        </div> <!-- subscription-details-left end -->

        <!-- subscription-details-right start -->
        <div class="subscription-details-right info-inner-right">
                <a target="_blank" href="[[+update-payment-url]]" class="manange-email">Update Credit Card Info</a>
        </div> <!-- subscription-details-right end -->

        <div class="clear"></div> <!-- clear -->

        <!-- billing-wrapper start -->
        <div class="billing-wrapper">

                <!-- subscription-details-left start -->
                <div class="subscription-details-left check-icon">
                        <h3>Billing Address</h3>
                        [[+billing_address]]
                </div> <!-- subscription-details-left end -->

        </div> <!-- billing-wrapper end -->

        <div class="clear"></div> <!-- clear -->

</div> <!-- subscription-details end -->

